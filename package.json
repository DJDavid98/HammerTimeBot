{
  "name": "hammertimebot",
  "version": "1.0.0",
  "description": "Chat bot for the MLP Vector Club's Discord server",
  "author": "DJDavid98 <djdavid98@protonmail.com> (https://github.com/DJDavid98)",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "build": "tsc",
    "build:clean": "rimraf build",
    "start": "node ./build/index.js",
    "start:dev": "npm run build:clean && npm run build && npm run start",
    "watch:dev:tsc": "tsc --watch --preserveWatchOutput",
    "watch:dev:nodemon": "nodemon ./build/index.js",
    "watch:dev:commands": "concurrently --names TSC,Nodemon -c \"blue,green\" \"npm run watch:dev:tsc\" \"npm run watch:dev:nodemon\"",
    "watch:dev": "npm run build:clean && npm run build && npm run watch:dev:commands",
    "test": "jest --ci --randomize",
    "test:watch": "jest --watch --randomize",
    "prepare": "husky install"
  },
  "dependencies": {
    "@discordjs/rest": "^1.1.0",
    "axios": "^0.21.1",
    "bufferutil": "^4.0.3",
    "concurrently": "^6.2.1",
    "discord-api-types": "^0.37.10",
    "discord.js": "^14.7.1",
    "dotenv": "^10.0.0",
    "i18next": "^21.6.16",
    "i18next-fs-backend": "^1.1.4",
    "js-levenshtein": "^1.1.6",
    "moment": "^2.29.2",
    "moment-timezone": "^0.5.34",
    "pm2": "^5.1.0",
    "rimraf": "^3.0.2",
    "shell-escape": "^0.2.0",
    "tslib": "^2.3.0",
    "utf-8-validate": "^5.0.5",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^29.4.0",
    "@types/js-levenshtein": "^1.1.1",
    "@types/node": "^18.0.5",
    "@types/shell-escape": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.2.7",
    "eslint-plugin-i18n-validator": "^0.1.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "^7.0.4",
    "jest": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "nodemon": "^2.0.12",
    "ts-jest": "^29.0.5",
    "typescript": "^4.7"
  },
  "nodemonConfig": {
    "delay": 1000
  }
}
