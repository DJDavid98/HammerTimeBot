{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": [
      "ES2018",
      "DOM"
    ],
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2016"
  },
  "exclude": [
    "tests"
  ]
}
