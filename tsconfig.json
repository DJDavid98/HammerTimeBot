{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "tests"
  ]
}
